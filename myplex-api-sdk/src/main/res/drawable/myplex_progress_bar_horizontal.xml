<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="@color/app_theme_color"
                android:centerY="0.50"
                android:endColor="@color/app_theme_color"
                android:startColor="@color/app_theme_color" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="90"
                    android:endColor="@color/red_highlight_color"
                    android:startColor="@color/red_highlight_color" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="90"
                    android:endColor="@color/red_highlight_color"
                    android:startColor="@color/red_highlight_color" />
            </shape>
        </clip>
    </item>

</layer-list>