<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    >

    <RelativeLayout
        android:background="@drawable/gray_background_rounded"
        android:layout_width="wrap_content"
        android:padding="24dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello_world"
        android:textColor="@color/white_60"
        android:textSize="@dimen/textsize_20" />


    <View
        android:id="@+id/title_div"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_gap_1"
        android:layout_below="@+id/alert_title"
        android:layout_marginTop="@dimen/margin_gap_16"
        android:background="@android:color/darker_gray" />


    <TextView
        android:id="@+id/alert_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_div"
        android:layout_gravity="center"
        android:maxLines="15"
        android:layout_marginTop="@dimen/margin_gap_16"
        android:text="@string/hello_world"
        android:textColor="@color/white_60"
        android:textSize="@dimen/textsize_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_message"
        android:layout_marginTop="@dimen/margin_gap_20"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_btn_transparent"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_gap_16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_gap_4"
            android:layout_weight="1"
            android:background="@drawable/rounded_btn_transparent"
            android:text="@string/feedbackokbutton"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_gap_16" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>