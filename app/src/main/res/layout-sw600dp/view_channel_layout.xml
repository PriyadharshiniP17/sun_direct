<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/margin_gap_130"
        android:layout_height="@dimen/margin_gap_144"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/channel_thumbnail_img"
            android:layout_width="@dimen/margin_gap_120"
            android:layout_height="@dimen/margin_gap_120"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/live_tv_channel_placeholder" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/customProgress"
        style="@style/ChannelEpgCustomProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="0" />
    <!--<View
        android:id="@+id/view_thumb_line"
        android:layout_below="@id/channel_thumbnail_img"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:visibility="gone"
        android:background="@color/white_50"
        />-->
</LinearLayout>