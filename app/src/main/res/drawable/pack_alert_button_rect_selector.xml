<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2dp" android:color="@color/cast_dialog_close_button_pressed_state"/>

            <solid android:color="@color/cast_dialog_close_button_pressed_state"/>

            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp"/>


        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="2dp" android:color="@color/cast_dialog_close_button_normal_state"/>

            <solid android:color="@color/cast_dialog_close_button_normal_state"/>

            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp"/>

            <corners android:radius="4dp" />

        </shape>
    </item>

</selector>