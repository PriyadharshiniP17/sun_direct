<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:width="90dp" android:height="250dp" android:top="5dp" android:left="30dp">
        <shape>
            <solid android:color="@color/genresdropdown"/>

            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item android:width="20dp" android:height="20dp"
        android:left="50dp">
        <rotate android:fromDegrees="45"
            android:pivotX="0"
            android:pivotY="0">
            <shape>
                <solid android:color="@color/genresdropdown"/>
            </shape>
        </rotate>
    </item>

</layer-list>