<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_103sdp"
    app:cardBackgroundColor="@color/transparent"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageview_thumbnail_voditem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_103sdp"
                android:layout_gravity="center"
                android:src="@drawable/black" />

            <ImageView
                android:id="@+id/iv_partener_logo_right"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:scaleType="centerInside"
                android:visibility="visible" />
        </FrameLayout>

        <TextView
            android:id="@+id/textview_genre_title"
            style="@style/TextAppearance.FontBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_gap_4"
            android:text=""
            android:textColor="@color/carousel_heading_text_color"
            android:visibility="gone"
            android:textSize="@dimen/textsize_12" />
    </LinearLayout>
</androidx.cardview.widget.CardView>