<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_gap_18"
            android:layout_marginEnd="@dimen/margin_gap_18"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_bkg"
                android:minHeight="?attr/actionBarSize"/>


            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/profile_pic_height"
                android:layout_height="@dimen/profile_pic_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="@dimen/margin_gap_12"
                android:src="@drawable/profile_new_avatar" />

            <TextView
                android:id="@+id/nameEt"
                style="@style/TextAppearance.FontMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:enabled="false"
                android:gravity="center"
                android:hint="Hi User !"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/textsize_16" />


            <TextView
                android:id="@+id/emailEt"
                style="@style/TextAppearance.NormalFontRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="@dimen/margin_gap_8"
                android:layout_marginRight="24dp"
                android:enabled="false"
                android:gravity="center"
                android:hint="Email"
                android:paddingStart="15dp"
                android:textColor="@color/white_80"
                android:textColorHint="@color/white_80"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mobileEt"
                style="@style/TextAppearance.NormalFontRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailIDSignIn"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="@dimen/margin_gap_8"
                android:layout_marginRight="24dp"
                android:enabled="false"
                android:gravity="center"
                android:hint="Mobile Number"
                android:paddingStart="15dp"
                android:textColor="@color/white_80"
                android:textColorHint="@color/white_80"
                android:textSize="14sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="24dp"
                android:drawableEnd="@drawable/right_arrow"
                android:gravity="start"
                android:text="@string/my_watch_list"
                android:textAppearance="@style/TextAppearance.FontBold"
                android:textColor="@color/white_100"
                android:textSize="@dimen/textsize_22"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:drawableEnd="@drawable/right_arrow"
                android:gravity="start"
                android:text="@string/my_subscriptions"
                android:textAppearance="@style/TextAppearance.FontBold"
                android:textColor="@color/white_100"
                android:textSize="@dimen/textsize_22"
                android:visibility="gone" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_gap_16"
                android:visibility="visible"
                app:cardBackgroundColor="@color/profile_card_background_color"
                app:cardCornerRadius="@dimen/margin_gap_6"
                app:cardElevation="@dimen/margin_gap_4">

                <LinearLayout
                    android:id="@+id/go_premium_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_gap_12"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_gap_32"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/nav_drawer_brand_icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_gap_24"
                        android:layout_marginEnd="@dimen/margin_gap_12"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To Watch Premium Videos"
                            android:textColor="@color/sub_heading_text_color"
                            android:textSize="@dimen/textsize_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_gap_4"
                            android:text="GO PREMIUM"
                            android:textColor="@color/title_text_color"
                            android:textSize="@dimen/textsize_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end">

                        <ImageView
                            android:layout_width="@dimen/margin_gap_12"
                            android:layout_height="@dimen/margin_gap_12"
                            android:src="@drawable/nav_drawer_option_arrow_grey" />

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_gap_12"
                app:cardBackgroundColor="@color/profile_card_background_color"
                app:cardCornerRadius="@dimen/margin_gap_6"
                app:cardElevation="@dimen/margin_gap_4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_gap_12"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_gap_12"
                            android:layout_marginBottom="@dimen/margin_gap_6"
                            android:orientation="horizontal"
                            android:id="@+id/subscprtions_layout">

                            <ImageView
                                android:layout_width="@dimen/margin_gap_18"
                                android:layout_height="@dimen/margin_gap_18"
                                android:layout_gravity="center"
                                android:src="@drawable/account_subscription_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_gap_20"
                                android:text="Subscription Details"
                                android:textColor="@color/title_text_color"
                                android:textSize="@dimen/textsize_12" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="end">

                                <ImageView
                                    android:layout_width="@dimen/margin_gap_12"
                                    android:layout_height="@dimen/margin_gap_12"
                                    android:src="@drawable/nav_drawer_option_arrow_grey" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_gap_1"
                            android:layout_marginTop="@dimen/margin_gap_16"
                            android:background="@color/nav_menu_seperator_colors" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_gap_16"
                        android:layout_marginBottom="@dimen/margin_gap_6"
                        android:orientation="horizontal"
                        android:id="@+id/edit_details_layout">

                        <ImageView
                            android:layout_width="@dimen/margin_gap_18"
                            android:layout_height="@dimen/margin_gap_18"
                            android:layout_gravity="center"
                            android:src="@drawable/account_edit_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_gap_20"
                            android:text="Edit Details"
                            android:textColor="@color/title_text_color"
                            android:textSize="@dimen/textsize_12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end">

                            <ImageView
                                android:layout_width="@dimen/margin_gap_12"
                                android:layout_height="@dimen/margin_gap_12"
                                android:src="@drawable/nav_drawer_option_arrow_grey" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_gap_1"
                        android:layout_marginTop="@dimen/margin_gap_16"
                        android:visibility="gone"
                        android:background="@color/nav_menu_seperator_colors" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/margin_gap_16"
                        android:layout_marginBottom="@dimen/margin_gap_6"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_gap_18"
                            android:layout_height="@dimen/margin_gap_18"
                            android:layout_gravity="center"
                            android:src="@drawable/account_password_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_gap_20"
                            android:text="Change password"
                            android:textColor="@color/title_text_color"
                            android:textSize="@dimen/textsize_12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end">

                            <ImageView
                                android:layout_width="@dimen/margin_gap_12"
                                android:layout_height="@dimen/margin_gap_12"
                                android:src="@drawable/nav_drawer_option_arrow_grey" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_gap_1"
                        android:layout_marginTop="@dimen/margin_gap_16"
                        android:background="@color/nav_menu_seperator_colors" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_gap_16"
                        android:layout_marginBottom="@dimen/margin_gap_16"
                        android:orientation="horizontal"
                        android:id="@+id/logout_layout">

                        <ImageView
                            android:layout_width="@dimen/margin_gap_18"
                            android:layout_height="@dimen/margin_gap_18"
                            android:layout_gravity="center"
                            android:src="@drawable/account_logout_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_gap_20"
                            android:text="Sign out"
                            android:textColor="@color/title_text_color"
                            android:textSize="@dimen/textsize_12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end">

                            <ImageView
                                android:layout_width="@dimen/margin_gap_12"
                                android:layout_height="@dimen/margin_gap_12"
                                android:src="@drawable/nav_drawer_option_arrow_grey" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>