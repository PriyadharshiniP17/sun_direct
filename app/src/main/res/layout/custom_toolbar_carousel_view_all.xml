<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/custom_toolbar_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/toolbar_bg_colour"
android:nestedScrollingEnabled="false"
android:orientation="horizontal">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_25sdp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    android:nestedScrollingEnabled="false">

    <ImageView
        android:id="@+id/toolbar_settings_button"
        android:layout_width="@dimen/margin_gap_40"
        android:layout_height="@dimen/margin_gap_40"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_gap_12"
        android:src="@drawable/arrow_back" />

    <ImageView
        android:id="@+id/toolbar_tv_channel_Img"
        android:layout_width="@dimen/margin_gap_42"
        android:layout_height="@dimen/margin_gap_42"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_gap_8"
        android:layout_marginTop="@dimen/margin_gap_2"
        android:layout_marginBottom="@dimen/margin_gap_2"
        android:scaleType="centerInside"
        android:src="@drawable/app_icon"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.myplex.myplex.utils.FontRegularTypeface
            android:id="@+id/toolbar_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/_3sdp"
            android:text="@string/app_name"
            android:textColor="@color/navigation_drawer_color_text"
            android:textSize="@dimen/textsize_18" />

            <TextView
                android:id="@+id/toolbar_header_title_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_gap_2"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/moreInHindi"
                android:textAppearance="@style/TextAppearance.FontHindi"
                android:textColor="@color/navigation_drawer_color_text"
                android:textSize="20sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_view_all"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_bar_height"
        android:minHeight="@dimen/action_bar_height"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_filter_icon"
            android:layout_width="@dimen/margin_gap_48"
            android:layout_height="@dimen/margin_gap_48"
            android:minHeight="@dimen/margin_gap_48"
            android:layout_gravity="center_vertical|center_horizontal"
            android:padding="@dimen/margin_gap_12"
            android:src="@drawable/actionbar_filter_icon_default"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/toolbar_list_grid_converter"
            android:layout_width="@dimen/margin_gap_48"
            android:layout_height="@dimen/margin_gap_48"
            android:minHeight="@dimen/margin_gap_48"
            android:layout_gravity="center_vertical|center_horizontal"
            android:padding="@dimen/margin_gap_12"
            android:visibility="gone"
            android:src="@drawable/movies_grid_view_icon" />



    </LinearLayout>
</RelativeLayout>