<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bkg">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/app_bkg"
        android:contentInsetLeft="10dp"
        android:contentInsetRight="10dp"
        android:contentInsetStart="10dp"
        app:contentInsetLeft="10dp"
        app:contentInsetRight="10dp"
        app:contentInsetStart="10dp"/>
    <ProgressBar
        android:id="@+id/customactionbar_progressBar"
        style="@style/CustomProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/myplex_progress_bar_horizontal"
        android:layout_below="@+id/toolbar"/>

    <WebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/red_view"
        android:background="@color/app_bkg"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/customactionbar_progressBar"
        android:layout_centerInParent="true"
        android:background="@color/app_bkg"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textview_network_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/network_error"
        android:textColor="@color/progress_bar_loading_text_color"
        android:textSize="16sp"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/retry_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageview_error_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/reload_image" />

        <TextView
            android:id="@+id/textview_error_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview_error_retry"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/msg_tap_to_retry"
            android:textAppearance="@style/TextAppearance.FontRegular"
            android:textColor="@color/download_item_subtitle_text_color"
            android:textSize="@dimen/textsize_12"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>