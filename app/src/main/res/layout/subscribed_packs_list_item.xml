<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        app:cardBackgroundColor="#171717"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/margin_2"
        android:layout_marginStart="@dimen/margin_gap_12"
        android:layout_marginEnd="@dimen/margin_gap_12"
        android:layout_marginTop="@dimen/margin_gap_48"
        android:layout_marginBottom="@dimen/margin_gap_48"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_gap_24"
            android:layout_marginStart="@dimen/margin_gap_18"
            android:layout_marginEnd="@dimen/margin_gap_18">

            <TextView
                android:id="@+id/pack_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.FontBold"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="@dimen/textsize_14"/>

            <TextView
                android:id="@+id/pack_rate_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="INR 699"
                android:textColor="@color/title_text_color"
                style="@style/TextAppearance.FontBold"
                android:textSize="@dimen/textsize_16"
                android:layout_marginTop="@dimen/margin_gap_8"
                android:gravity="center"/>

            <TextView
                android:id="@+id/pack_duration_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="For 365 days"
                android:textColor="@color/subtitle_text_color"
                style="@style/TextAppearance.FontRegular"
                android:textSize="@dimen/textsize_12"
                android:layout_marginTop="@dimen/margin_gap_8"
                android:gravity="center"/>

            <TextView
                android:id="@+id/pack_purchase_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Date of Purchase 20 Feb 2020"
                android:textColor="@color/subtitle_text_color"
                style="@style/TextAppearance.FontRegular"
                android:textSize="@dimen/textsize_12"
                android:layout_marginTop="@dimen/margin_gap_8"
                android:gravity="center"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_gap_1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_gap_24"
                android:background="@color/gray"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_gap_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/subtitle_text_color"
                    style="@style/TextAppearance.FontRegular"
                    android:textSize="@dimen/textsize_12"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Active"
                    android:textColor="@color/title_text_color"
                    style="@style/TextAppearance.FontRegular"
                    android:textSize="@dimen/textsize_12"
                    android:layout_gravity="end"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_gap_1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_gap_24"
                android:background="@color/gray"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_gap_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textColor="@color/subtitle_text_color"
                    style="@style/TextAppearance.FontRegular"
                    android:textSize="@dimen/textsize_12"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/country_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="India"
                    android:textColor="@color/title_text_color"
                    style="@style/TextAppearance.FontRegular"
                    android:textSize="@dimen/textsize_12"
                    android:layout_gravity="end"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_gap_1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_gap_24"
                android:background="@color/gray"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_gap_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Mode"
                    android:textColor="@color/subtitle_text_color"
                    style="@style/TextAppearance.FontRegular"
                    android:textSize="@dimen/textsize_12"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/payment_mode_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Net Banking"
                    android:textColor="@color/title_text_color"
                    style="@style/TextAppearance.FontRegular"
                    android:textSize="@dimen/textsize_12"
                    android:layout_gravity="end"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_gap_1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_gap_24"
                android:background="@color/gray"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_gap_12"
                android:layout_marginBottom="@dimen/margin_gap_24">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiry Date"
                    android:textColor="@color/subtitle_text_color"
                    style="@style/TextAppearance.FontRegular"
                    android:textSize="@dimen/textsize_12"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/expiry_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="20 Feb 2021"
                    android:textColor="@color/title_text_color"
                    style="@style/TextAppearance.FontRegular"
                    android:textSize="@dimen/textsize_12"
                    android:layout_gravity="end"
                    android:gravity="end"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>