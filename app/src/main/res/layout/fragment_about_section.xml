<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bkg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_account"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/account"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.NormalFontRegular"
        android:textColor="@color/static_help_text"
        android:textSize="@dimen/textsize_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_gap_24"
        android:visibility="gone"
        android:layout_marginStart="@dimen/margin_gap_24"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_account_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="a@a.com"
            android:textAppearance="@style/TextAppearance.NormalFontRegular"
            android:textColor="@color/static_help_text"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/text_account_number"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:textAppearance="@style/TextAppearance.NormalFontRegular"
            android:textColor="@color/static_help_text"
            android:textSize="@dimen/textsize_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/text_about_app"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:textAppearance="@style/TextAppearance.NormalFontRegular"
        android:textColor="@color/static_help_text"
        android:textSize="@dimen/textsize_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/text_tnc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/tnc"
        android:textColor="@color/static_help_text"
        android:textAppearance="@style/TextAppearance.NormalFontRegular"
        android:textSize="@dimen/textsize_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/text_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/privacy_policy"
        android:textColor="@color/static_help_text"
        android:textAppearance="@style/TextAppearance.NormalFontRegular"
        android:textSize="@dimen/textsize_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/text_contact_us"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/contact_us"
        android:textColor="@color/static_help_text"
        android:textAppearance="@style/TextAppearance.NormalFontRegular"
        android:textSize="@dimen/textsize_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:background="@color/divider_color" />

</LinearLayout>