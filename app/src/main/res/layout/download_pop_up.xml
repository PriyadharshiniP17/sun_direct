<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bkg"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            style="@style/TextAppearance.FontBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Download Videos"
            android:textColor="@color/title_text_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/cancel_download"
            android:layout_width="@dimen/margin_gap_18"
            android:layout_height="@dimen/margin_gap_18"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="end|center_horizontal"
            android:layout_marginEnd="@dimen/margin_gap_10"
            android:src="@drawable/player_icon_close" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/data_saver_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/data_saver_button"
            style="@style/download_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Data Saver"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/data_saver_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:text="@string/download_option_text_data_saver"
            android:textAppearance="@style/TextAppearance.FontBold"
            android:textColor="@color/subtitle_text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/good_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/good_button"
            style="@style/download_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Good"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/good_option_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:text="@string/download_option_text_good"
            android:textAppearance="@style/TextAppearance.FontBold"
            android:textColor="@color/subtitle_text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/best_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/best_button"
            style="@style/download_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Best"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/best_option_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:text="@string/download_option_text_best"
            android:textAppearance="@style/TextAppearance.FontBold"
            android:textColor="@color/subtitle_text_color"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/hd_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/hd_button"
            style="@style/download_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="HD"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hd_option_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:text="@string/download_option_text_hd"
            android:textAppearance="@style/TextAppearance.FontBold"
            android:textColor="@color/subtitle_text_color"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>