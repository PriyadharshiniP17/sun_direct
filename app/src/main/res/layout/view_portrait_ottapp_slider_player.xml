<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/playerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/inlinePlayerSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_360sdp"
        android:layout_height="@dimen/_400sdp"
        app:cardCornerRadius="@dimen/_8sp"
        app:cardPreventCornerOverlap="true"
        >

        <ImageView
            android:id="@+id/slider_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/movie_thumbnail_placeholder" />
    </androidx.cardview.widget.CardView>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_top_gradient"
        android:layout_alignParentTop="true"
        android:src="@drawable/banner_top_gradient"
        android:visibility="gone" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/banner_bottom_gradient"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/banner_play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/banner_play_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/content_badge"
        android:layout_width="@dimen/margin_gap_24"
        android:layout_height="@dimen/margin_gap_24"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp" />


    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/rl_add_to_watchlist">

            <ImageView
                android:id="@+id/muteButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/mute_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_to_watchlist"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_gap_36"
            android:layout_alignBottom="@+id/dummy_middle_view"
            android:layout_marginEnd="@dimen/margin_gap_6"
            android:layout_toStartOf="@+id/dummy_middle_view"
            android:background="@drawable/rounded_btn_portrait_banner_gray"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="@dimen/margin_gap_96"
            android:paddingLeft="@dimen/margin_gap_8"
            android:paddingRight="@dimen/margin_gap_8"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_watchlist_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/watchlist_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_gap_4"
                android:layout_toRightOf="@+id/iv_watchlist_icon"
                android:text="@string/Watchlist"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/color_d3d3d3"
                android:textSize="@dimen/textsize_12" />
        </RelativeLayout>

        <View
            android:id="@+id/dummy_middle_view"
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/play_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_gap_36"
            android:layout_alignBottom="@+id/dummy_middle_view"
            android:layout_marginStart="@dimen/margin_gap_6"
            android:layout_toEndOf="@+id/dummy_middle_view"
            android:minWidth="@dimen/margin_gap_96"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_play"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_gap_36"
                android:layout_marginStart="@dimen/margin_gap_16"
                android:background="@drawable/rounded_btn_portrait_banner"
                android:gravity="center"
                android:minWidth="@dimen/margin_gap_96"
                android:paddingLeft="@dimen/margin_gap_24"
                android:paddingRight="@dimen/margin_gap_16"
                android:text="@string/Play"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_12" />

            <ImageView
                android:layout_width="@dimen/margin_gap_12"
                android:layout_height="@dimen/margin_gap_12"
                android:layout_alignStart="@+id/tv_play"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_gap_12"
                android:src="@drawable/play_icon" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/play_layout"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_partner"
                android:layout_width="@dimen/margin_gap_36"
                android:layout_height="@dimen/margin_gap_36"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dummy_middle_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_gap_8"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/textsize_14" />

        <RelativeLayout
            android:id="@+id/ad_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dummy_middle_view"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_gap_18"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_gap_6"
                    android:textAppearance="@style/TextAppearance.FontMedium"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/sub_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontMedium"
                    android:textColor="@color/subtitle_text_color"
                    android:textSize="@dimen/textsize_12" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_gap_18"
                android:visibility="gone"
                android:gravity="end">

                <ImageView
                    android:layout_width="@dimen/margin_gap_40"
                    android:layout_height="@dimen/margin_gap_40"
                    android:layout_gravity="center"
                    android:src="@drawable/portriat_banner_play_icon"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
