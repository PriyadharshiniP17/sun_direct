<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/margin_gap_10"
    android:layout_marginEnd="@dimen/margin_gap_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/half_white_screen"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_gap_24"
            android:paddingTop="@dimen/margin_gap_30"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_gap_16"
                android:src="@drawable/rating_icon"/>

            <com.myplex.myplex.utils.RobotoMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/titleLabel"
                android:textAlignment="center"
                android:text="How was your Experience"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textSize="32sp"/>

            <com.myplex.myplex.utils.FontRegularTypeface
                android:id="@+id/ratingMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="@dimen/margin_gap_8"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/margin_gap_8"
                android:paddingRight="@dimen/margin_gap_8"
                android:text="Please rate us" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.myplex.myplex.ui.views.RatingbarCustom
                    android:id="@+id/ratingStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:innerMargin="5dp"
                    app:numStarts="5"
                    app:rating="0"
                    app:selected="@drawable/star_selected"
                    app:starSize="30dp"
                    app:unselected="@drawable/star_unselected" />
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/margin_gap_8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_CCCCCC"
         />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.myplex.myplex.utils.RobotoMediumTextView
                    android:id="@+id/not_now_text"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="start"
                    android:padding="@dimen/margin_gap_8"

                    android:text="NOT NOW"
                    tools:text="NOT NOW" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_CCCCCC"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_gap_4"
                    android:layout_marginBottom="@dimen/margin_gap_4"
                    tools:layout_editor_absoluteX="149dp"
                    tools:layout_editor_absoluteY="8dp" />

                <com.myplex.myplex.utils.RobotoMediumTextView
                    android:id="@+id/rate_app_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAlignment="center"
                    android:layout_weight="0.5"
                    android:padding="@dimen/margin_gap_8"

                    android:text="SUBMIT"
                    tools:text="SUBMIT" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>