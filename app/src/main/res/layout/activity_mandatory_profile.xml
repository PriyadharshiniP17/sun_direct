<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_bkg"
                android:minHeight="?attr/actionBarSize">
            </androidx.appcompat.widget.Toolbar>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="DOB"
                android:paddingStart="15dp"
                android:textColor="@color/white_80"
                android:textColorHint="@color/white_80"
                android:gravity="start"
                style="@style/TextAppearance.NormalFontRegular"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/dobEt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_gap_10"
                android:paddingStart="15dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="12dp"
                android:textSize="14sp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/non_editable_color"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Select DOB"
                android:enabled="true"
                android:background="@drawable/rounded_corner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="Country"
                android:paddingStart="15dp"
                android:textColor="@color/white_80"
                android:textColorHint="@color/white_80"
                android:gravity="start"
                style="@style/TextAppearance.NormalFontRegular"
                android:enabled="false"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/countrySpinner"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="12dp"
                android:paddingStart="15dp"
                android:popupBackground="@color/white"
                android:visibility="visible"
                android:dropDownSelector="@android:drawable/btn_dropdown"
                android:textSize="14sp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/edittextColor"
                android:background="@drawable/rounded_corner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="State"
                android:paddingStart="15dp"
                android:textColor="@color/white_80"
                android:textColorHint="@color/white_80"
                android:gravity="start"
                style="@style/TextAppearance.NormalFontRegular"
                android:enabled="false"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/stateSpinner"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="12dp"
                android:paddingStart="15dp"
                android:popupBackground="@color/white"
                android:visibility="visible"
                android:dropDownSelector="@android:drawable/btn_dropdown"
                android:textSize="14sp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/edittextColor"
                android:background="@drawable/rounded_corner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="City"
                android:paddingStart="15dp"
                android:textColor="@color/white_80"
                android:textColorHint="@color/white_80"
                android:gravity="start"
                style="@style/TextAppearance.NormalFontRegular"
                android:textSize="14sp" />


            <Spinner
                android:id="@+id/citySpinner"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="12dp"
                android:paddingStart="15dp"
                android:popupBackground="@color/white"
                android:visibility="visible"
                android:dropDownSelector="@android:drawable/btn_dropdown"
                android:textSize="14sp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/edittextColor"
                android:background="@drawable/rounded_corner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="Address"
                android:paddingStart="15dp"
                android:textColor="@color/white_80"
                android:textColorHint="@color/white_80"
                android:gravity="start"
                style="@style/TextAppearance.NormalFontRegular"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/addressEt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_gap_10"
                android:paddingStart="15dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="12dp"
                android:textSize="14sp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/non_editable_color"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter Address"
                android:enabled="true"
                android:background="@drawable/rounded_corner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="Pincode"
                android:paddingStart="15dp"
                android:textColor="@color/white_80"
                android:textColorHint="@color/white_80"
                android:gravity="start"
                style="@style/TextAppearance.NormalFontRegular"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/pinCodeEt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_gap_10"
                android:paddingStart="15dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="12dp"
                android:textSize="14sp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/non_editable_color"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter Pincode"
                android:enabled="true"
                android:background="@drawable/rounded_corner" />

            <Button
                android:id="@+id/updateProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_gap_18"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"
                android:text="Update"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                style="@style/buy_button_style"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>