<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_navigation_item"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dimen_55_dp"
    android:clickable="true"
    android:paddingBottom="@dimen/margin_gap_6"
    android:paddingTop="@dimen/margin_gap_6">

       <com.myplex.myplex.utils.FontRegularTypeface
        android:id="@+id/txtNavDrawerItemAnotherLangTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:gravity="end|center_vertical"
        android:layout_marginTop="@dimen/margin_gap_72"
        android:layout_marginBottom="@dimen/margin_gap_72"
        android:layout_marginEnd="@dimen/margin_gap_24"
        android:textAppearance="@style/TextAppearance.FontHindi"
        android:textColor="@color/navigation_drawer_color_text_sec_iter"
        android:textSize="@dimen/textsize_14"
        android:visibility="gone"
        android:text=""
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/txtNavDrawerItemImage"
        android:layout_width="@dimen/margin_gap_24"
        android:layout_height="@dimen/margin_gap_24"
        android:layout_marginTop="@dimen/margin_gap_4"
        android:contentDescription="@string/app_name"
        android:src="@drawable/search_icon" />

    <com.myplex.myplex.utils.FontBoldTypeFace
        android:id="@+id/txtNavDrawerItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_gap_35"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.FontBold"
        android:padding="@dimen/margin_gap_5"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_gap_1"
            android:layout_marginTop="@dimen/margin_gap_2"
            android:layout_marginBottom="@dimen/margin_gap_12"
            android:background="@color/nav_menu_seperator_colors"
            android:visibility="gone"/>


    </RelativeLayout>