<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newsAuthor"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_gap_42"
    android:visibility="visible"
    android:background="@color/news_author_background_color"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/margin_30"
        android:layout_height="@dimen/margin_30"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="@dimen/margin_gap_10"
        android:layout_marginRight="@dimen/margin_gap_9"
        android:layout_marginBottom="@dimen/margin_gap_9"
        android:backgroundTint="@color/transparent"
        app:cardCornerRadius="@dimen/textsize_15">

        <ImageView
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_new_avatar" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/authorname"
        style="@style/TextAppearance.NormalFontRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text=""
        android:textColor="@color/news_author_text_color"
         />

</LinearLayout>






