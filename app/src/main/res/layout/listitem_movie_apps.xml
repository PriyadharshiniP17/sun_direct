<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_item_bkg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/list_item_bkg">

        <ImageView
            android:id="@+id/thumbnail__app_icon"
            android:layout_width="108dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/thumbnail__app_icon"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textAppearance="@style/TextAppearance.FontBold"
                android:textColor="@color/white_100"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/app_offer_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Loading.."
                android:textAppearance="@style/TextAppearance.FontRegular"
                android:textColor="@color/white_50"
                android:textSize="@dimen/textsize_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp">

                <TextView
                    android:id="@+id/install_txt"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_bkg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="Install now"
                    android:textAppearance="@style/TextAppearance.FontLight"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>