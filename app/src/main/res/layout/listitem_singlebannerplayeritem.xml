<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/single_banner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.FontBold"
                android:textColor="@color/carousel_heading_text_color"
                android:textSize="@dimen/carousel_title_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/single_banner_alt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_gap_4"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.FontHindi"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/textsize_14"
                android:visibility="gone" />


        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">


            <FrameLayout
                android:id="@+id/playerFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <SurfaceView
                    android:id="@+id/playerSurfaceView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible" />

            </FrameLayout>

            <com.myplex.myplex.ui.views.RoundedCornerImageView
                android:id="@+id/imageview_thumbnail_voditem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/black" />

            <ImageView
                android:id="@+id/iv_partener_logo_right"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:scaleType="centerInside"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/content_badge"
                android:layout_width="@dimen/margin_gap_24"
                android:layout_height="@dimen/margin_gap_24"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp" />

            <ImageView
                android:id="@+id/mutebuttoniv"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="top|end"
                android:focusable="true"
                android:clickable="true"
                android:src="@drawable/mute_icon"
                android:visibility="visible" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>