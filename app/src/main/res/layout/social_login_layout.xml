<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_gap_24"
        android:layout_marginTop="@dimen/margin_gap_14"
        android:layout_marginEnd="@dimen/margin_gap_24"
        android:layout_marginBottom="@dimen/margin_gap_14"
        android:orientation="horizontal"
        android:weightSum="3">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_gap_36"
            android:layout_marginEnd="@dimen/margin_gap_12"
            android:layout_weight="1"
            android:background="@color/line_color" />


        <TextView
            style="@style/TextAppearance.FontRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="OR CONNECT WITH"
            android:textColor="@color/or_connect_with_color"
            android:textSize="@dimen/textsize_12" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_gap_12"
            android:layout_marginEnd="@dimen/margin_gap_36"
            android:layout_weight="1"
            android:background="@color/line_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_gap_14"
        android:layout_marginBottom="@dimen/margin_gap_24"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sign_in_button1"
            android:layout_width="@dimen/margin_gap_56"
            android:layout_height="@dimen/margin_gap_56"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@drawable/google" />

        <Button
            android:id="@+id/facebook_icon_sign_up_social"
            android:layout_width="@dimen/margin_gap_56"
            android:layout_height="@dimen/margin_gap_56"
            android:layout_centerHorizontal="true"
            android:background="@drawable/facebook"
            android:visibility="visible" />

        <com.facebook.login.widget.LoginButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>