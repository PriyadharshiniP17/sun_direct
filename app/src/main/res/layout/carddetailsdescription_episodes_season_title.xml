<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_season_drop_down"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_gap_56"

    android:gravity="center_vertical"
    android:visibility="visible"
    android:background="@color/app_bkg">

    <TextView
        android:id="@+id/header_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_gap_20"
        android:layout_marginTop="@dimen/margin_gap_8"
        android:layout_centerVertical="true"
        android:text="Loading..."
        android:textAppearance="@style/TextAppearance.NormalFontRegular"
        android:textColor="@drawable/button_text_white_red_color"
        android:textSize="@dimen/textsize_14" />

    <TextView
        android:id="@+id/header_sub_title_textLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_title_text"
        android:layout_marginLeft="@dimen/margin_gap_20"
        android:layout_marginTop="@dimen/margin_gap_2"
        android:textAppearance="@style/TextAppearance.FontHindi"
        android:textColor="@drawable/button_text_white_red_color"
        android:textSize="@dimen/textsize_14"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header_drop_down_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_gap_20"
            android:layout_marginTop="@dimen/margin_gap_8"
            android:text="Today"
            android:textAppearance="@style/TextAppearance.FontHindi"
            android:textColor="@drawable/button_text_white_red_color"
            android:textSize="@dimen/textsize_14"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/drop_down_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:padding="5dp"
            android:src="@drawable/drop_down_icon" />

    </LinearLayout>

</RelativeLayout>
