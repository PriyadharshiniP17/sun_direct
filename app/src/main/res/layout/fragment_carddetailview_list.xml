<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topContent_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme_color"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.myplex.myplex.ui.fragment.FragmentCardDetailsDescription"
        tools:listitem="@layout/fragment_carddetailview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommendations_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/margin_gap_10"
        android:layout_below="@+id/list"
        android:background="@color/app_theme_color"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.myplex.myplex.ui.fragment.FragmentCardDetailsDescription"
        tools:listitem="@layout/fragment_carddetailview" />

    <com.myplex.myplex.utils.FontRegularTypeface
        android:id="@+id/no_data_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/no_content"
        android:textAppearance="@style/TextAppearance.FontRegular"
        android:textColor="@color/download_item_subtitle_text_color"
        android:textSize="@dimen/textsize_20"
        android:visibility="gone" />

    <ListView
        android:id="@+id/list_seasons_container"
        android:background="@color/app_theme_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/listitem_selector_bg"/>

</RelativeLayout>
