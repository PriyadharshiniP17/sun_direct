<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="@dimen/margin_gap_4">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_gap_150"
            android:background="@color/black"
            android:padding="@dimen/margin_gap_4">


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_gap_120"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="@dimen/margin_gap_176"
                android:layout_height="@dimen/_99sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/margin_gap_30" >


                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_gap_65"
                    android:src="@drawable/ic_launcher_background"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <com.myplex.myplex.utils.FontRegularTypeface
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_gap_20"
            android:layout_marginTop="@dimen/margin_gap_120"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="@dimen/margin_gap_20"
            android:layout_height="@dimen/margin_gap_20"
            android:layout_above="@+id/time_text"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_unlikeborder"
            android:visibility="visible" />

        <com.myplex.myplex.utils.FontRegularTypeface
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_gap_20"
            android:layout_marginTop="@dimen/margin_gap_120"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />
    </RelativeLayout>
</LinearLayout>