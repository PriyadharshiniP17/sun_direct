<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bkg"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bkg"
        android:minHeight="?attr/actionBarSize"
        android:contentInsetLeft="10dp"
        android:contentInsetRight="10dp"
        android:contentInsetStart="10dp"
        app:contentInsetLeft="10dp"
        app:contentInsetRight="10dp"
        app:contentInsetStart="10dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:paddingTop="5dp"
        android:background="@color/app_bkg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/liveTVlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_gap_24"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_gap_32"
                    android:layout_below="@+id/packs_title_div"
                    android:background="@color/app_theme_color"
                    android:layout_marginBottom="@dimen/margin_gap_8"
                    android:layout_marginTop="@dimen/margin_gap_8">

                    <RelativeLayout
                        android:id="@+id/layout_carousel_title_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_gap_32"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/live_tv_layout_view_all"
                        android:layout_toStartOf="@+id/live_tv_layout_view_all">

                        <ImageView
                            android:id="@+id/liveIcon"
                            android:layout_width="@dimen/margin_gap_42"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/margin_gap_2"
                            android:layout_marginTop="@dimen/margin_gap_2"
                            android:scaleType="centerInside"
                            android:src="@drawable/toolbar_logo"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/liveCategoryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_gap_2"
                            android:layout_marginStart="@dimen/margin_gap_2"
                            android:layout_toEndOf="@+id/liveIcon"
                            android:layout_toRightOf="@+id/liveIcon"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance.NormalFontRegular"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/textsize_18" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/live_tv_layout_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/liveMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_gap_8"
                            android:layout_marginRight="@dimen/margin_gap_8"
                            android:text="@string/more"
                            android:textAppearance="@style/TextAppearance.NormalFontRegular"
                            android:textColor="@color/more_text_color"
                            android:textSize="@dimen/textsize_12" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin_gap_8"
                            android:visibility="gone"
                            android:src="@drawable/movies_view_all_arrow" />
                    </LinearLayout>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/liveTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/movieLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/liveTVlayout"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_gap_24"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_gap_32"
                    android:layout_below="@+id/packs_title_div"
                    android:background="@color/app_theme_color"
                    android:layout_marginBottom="@dimen/margin_gap_8"
                    android:layout_marginTop="@dimen/margin_gap_8">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_gap_32"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/movies_layout_view_all"
                        android:layout_toStartOf="@+id/movies_layout_view_all">

                        <ImageView
                            android:id="@+id/moviesIcon"
                            android:layout_width="@dimen/margin_gap_42"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/margin_gap_2"
                            android:layout_marginTop="@dimen/margin_gap_2"
                            android:scaleType="centerInside"
                            android:src="@drawable/toolbar_logo"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/moviesCategoryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_gap_2"
                            android:layout_marginStart="@dimen/margin_gap_2"
                            android:layout_toEndOf="@+id/moviesIcon"
                            android:layout_toRightOf="@+id/moviesIcon"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance.NormalFontRegular"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/textsize_18" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/movies_layout_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/moviesMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_gap_8"
                            android:layout_marginRight="@dimen/margin_gap_8"
                            android:text="@string/more"
                            android:textAppearance="@style/TextAppearance.NormalFontRegular"
                            android:textColor="@color/more_text_color"
                            android:textSize="@dimen/textsize_12" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin_gap_8"
                            android:visibility="gone"
                            android:src="@drawable/movies_view_all_arrow" />
                    </LinearLayout>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/movies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/tvShowLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/movieLayout"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_gap_24"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_gap_32"
                    android:layout_below="@+id/packs_title_div"
                    android:background="@color/app_theme_color"
                    android:layout_marginBottom="@dimen/margin_gap_8"
                    android:layout_marginTop="@dimen/margin_gap_8">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_gap_32"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/tvshwos_layout_view_all"
                        android:layout_toStartOf="@+id/tvshwos_layout_view_all">

                        <ImageView
                            android:id="@+id/tvShowsIcon"
                            android:layout_width="@dimen/margin_gap_42"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/margin_gap_2"
                            android:layout_marginTop="@dimen/margin_gap_2"
                            android:scaleType="centerInside"
                            android:src="@drawable/toolbar_logo"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvShowsCategoryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_gap_2"
                            android:layout_marginStart="@dimen/margin_gap_2"
                            android:layout_toEndOf="@+id/tvShowsIcon"
                            android:layout_toRightOf="@+id/tvShowsIcon"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance.NormalFontRegular"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/textsize_18" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/tvshwos_layout_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvShowsMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_gap_8"
                            android:layout_marginRight="@dimen/margin_gap_8"
                            android:text="@string/more"
                            android:textAppearance="@style/TextAppearance.NormalFontRegular"
                            android:textColor="@color/more_text_color"
                            android:textSize="@dimen/textsize_12" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin_gap_8"
                            android:visibility="gone"
                            android:src="@drawable/movies_view_all_arrow" />
                    </LinearLayout>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tvShows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/margin_gap_36"
        android:layout_marginStart="@dimen/margin_gap_36"
        android:textColor="@color/gray_text" />

    <ProgressBar
        android:id="@+id/card_loading_progres_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/progressbar_color"
        android:indeterminateTintMode="src_atop" />

</RelativeLayout>
