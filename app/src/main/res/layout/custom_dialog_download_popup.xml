<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717"
    android:paddingLeft="@dimen/margin_gap_5"
    android:paddingTop="@dimen/margin_gap_24"
    android:orientation="vertical" >
    <TextView
        android:textSize="@dimen/textsize_16"
        android:paddingTop="@dimen/margin_gap_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Options"
        android:textAppearance="@style/TextAppearance.NormalFontRegular"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textsize_10"
        android:textAppearance="@style/TextAppearance.NormalFontRegular"
        android:textColor="#e1e1e1"
        android:textSize="@dimen/textsize_10" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_gap_16"
        android:paddingBottom="@dimen/dimen_15_dp"

        >

        <LinearLayout
            android:id="@+id/ll_play_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_gap_8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_gap_24"
                android:layout_height="@dimen/margin_gap_24"
                android:layout_marginLeft="@dimen/margin_gap_5"
                android:clickable="true"
                android:src="@drawable/epg_currently_playing_icon"
                android:text="Yes"
                android:textColor="#5DBCD2"
                android:textStyle="bold" />


            <TextView
                android:textSize="@dimen/textsize_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Play Now "
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_DownloadPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_gap_8"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/margin_gap_24"
                android:layout_height="@dimen/margin_gap_24"
                android:layout_marginLeft="@dimen/margin_gap_5"
                android:clickable="true"
                android:src="@drawable/carddetaildescription_download_icon_without_text" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Go To Downloads Page "
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delect_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_gap_8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_gap_24"
                android:layout_height="@dimen/margin_gap_24"
                android:layout_marginLeft="@dimen/margin_gap_5"
                android:clickable="true"
                android:src="@drawable/downloads_remove_icon"
                android:text="Yes"
                android:textColor="#5DBCD2"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Delete Download "
                android:textSize="@dimen/textsize_16"
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
