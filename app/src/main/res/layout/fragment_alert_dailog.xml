<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/close_icon_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_20sdp"
        android:visibility="gone"
        android:src="@drawable/nav_drawer_close" />

    <com.myplex.myplex.utils.FontRegularTypeface
        android:id="@+id/skip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/skip_text"
        android:padding="@dimen/_20sdp"
        android:visibility="visible"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/margin_gap_24"
        android:layout_height="@dimen/margin_gap_24"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"
        android:indeterminateTint="@color/progressbar_color"
        android:indeterminateTintMode="src_atop" />

</RelativeLayout>