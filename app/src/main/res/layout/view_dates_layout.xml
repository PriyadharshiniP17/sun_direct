<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools=" http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingPrefix"
    android:background="@color/app_bkg"
    android:padding="20dp">

    <com.myplex.myplex.utils.FontRegularTypeface
        android:id="@+id/dateTxt"
        android:paddingTop="@dimen/margin_gap_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/date_text_selector"
        android:textAppearance="@style/TextAppearance.NormalFontRegular"
        android:textSize="@dimen/textsize_16"
        />
    <com.myplex.myplex.utils.FontRegularTypeface
        android:paddingTop="@dimen/margin_gap_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/date_text_selector"
        android:textAppearance="@style/TextAppearance.NormalFontRegular"
        android:textSize="@dimen/textsize_16"
        android:visibility="gone"
        />

</LinearLayout>