<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="@dimen/continue_watching_width"
    app:cardBackgroundColor="@color/black_35"
    android:layout_height="@dimen/continue_watching_height"
    android:layout_marginLeft="20sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/imageview_layout_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                     <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageview_thumbnail"
                        android:layout_width="@dimen/continue_watching_width"
                        android:layout_height="@dimen/continue_watching_height"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                        android:src="@drawable/black" />

                    <FrameLayout
                        android:id="@+id/overlay_ripple"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_bg" />
                    <TextView
                        android:id="@+id/textview_title_player"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_margin="@dimen/margin_gap_3"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_12"
                        android:textStyle="bold"

                        />
                    <TextView
                        android:id="@+id/textview_searial_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:background="@drawable/catchup_title_background"
                        android:layout_margin="@dimen/margin_gap_3"
                        android:text=""
                        android:padding="@dimen/margin_gap_3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_12"
                        android:textStyle="bold"

                        />
                    <ImageView
                        android:id="@+id/imageview_play_alarm_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:src="@drawable/thumbnail_overlay_play_icon" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/black_30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_gap_5"
                    android:layout_marginLeft="@dimen/margin_gap_2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight=".8">



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/download_btn_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/downloading_gif_anim"
                            android:layout_width="@dimen/margin_gap_32"
                            android:layout_height="@dimen/margin_gap_32"
                            android:layout_gravity="center"
                            android:padding="@dimen/margin_gap_4" />

                        <TextView
                            android:id="@+id/download_btn_status_percent_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:paddingTop="@dimen/margin_gap_1"
                            android:singleLine="true"
                            android:text="0%"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.NormalFontRegular"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/textsize_9"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                    <ImageView

                        android:id="@+id/download_btn_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="end"
                        android:layout_marginTop="0dp"
                        android:layout_weight=".2"
                        android:backgroundTint="@color/white"
                        android:gravity="end"
                        android:src="@drawable/description_download_complete_icon"
                        android:tint="@color/white"
                        android:visibility="visible" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/black_30"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_gap_2"
                android:paddingBottom="@dimen/margin_gap_2">

                <TextView
                    android:id="@+id/textview_duration_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/no_info_available"
                    android:textAppearance="@style/TextAppearance.NormalFontRegular"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>

        </LinearLayout>

</RelativeLayout>