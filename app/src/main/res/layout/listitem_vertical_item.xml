<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_56sdp"
        android:layout_marginLeft="@dimen/margin_gap_8"
        android:layout_marginRight="@dimen/margin_gap_8"
        android:layout_marginTop="@dimen/margin_gap_8">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardimage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_56sdp"
            android:layout_margin="1dp"
            app:cardBackgroundColor="@color/app_bkg"
            app:cardCornerRadius="@dimen/margin_gap_4"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/thumbnailimage"
                android:layout_width="@dimen/_102sdp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/black" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_toRightOf="@id/cardimage"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_56sdp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.myplex.myplex.utils.FontRegularTypeface
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Loading.."
                    android:textAppearance="@style/TextAppearance.FontMedium"
                    android:textColor="@color/vertical_item_title_color"
                    android:textSize="@dimen/_12sdp" />

                <com.myplex.myplex.utils.FontRegularTypeface
                    android:id="@+id/descriptionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Loading.. "
                    android:textAppearance="@style/TextAppearance.FontMedium"
                    android:textColor="@color/vertical_item_subtitle_color"
                    android:layout_marginTop="@dimen/margin_gap_8"
                    android:textSize="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/margin_gap_8"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:text="Loading.."
                    android:textAppearance="@style/TextAppearance.FontMedium"
                    android:textColor="@color/vertical_item_subtitle_color"
                    android:textSize="@dimen/textsize_10" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>