<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_56sdp"
        android:layout_marginLeft="@dimen/margin_gap_8"
        android:layout_marginRight="@dimen/margin_gap_8"
        android:layout_marginTop="@dimen/margin_gap_8">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardimage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            app:cardCornerRadius="@dimen/margin_gap_4"
            app:cardUseCompatPadding="false">

            <ImageView
                android:id="@+id/thumbnailimage"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/black" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/cardimage"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.myplex.myplex.utils.FontRegularTypeface
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_gap_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Loading.."
                    android:textAppearance="@style/TextAppearance.NormalFontRegular"
                    android:textColor="@color/vertical_item_title_color"
                    android:textSize="@dimen/_13sdp" />

                <com.myplex.myplex.utils.FontRegularTypeface
                    android:id="@+id/sub_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_gap_10"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Loading.."
                    android:textAppearance="@style/TextAppearance.NormalFontRegular"
                    android:textColor="@color/vertical_item_subtitle_color"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>