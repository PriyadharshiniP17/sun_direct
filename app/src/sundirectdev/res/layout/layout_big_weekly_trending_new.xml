<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <com.myplex.myplex.ui.views.RoundedCornerImageView
            android:id="@+id/previewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:src="@drawable/black"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/pager_ottapps_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_carousel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_gap_20"
                android:layout_marginRight="@dimen/margin_gap_20">

                <com.myplex.myplex.utils.FontRegularTypeface
                    android:id="@+id/textview_genre_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.FontBold"
                    android:textColor="@color/carousel_heading_text_color"
                    android:textSize="@dimen/textsize_16"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/layout_carousel_title_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toStartOf="@+id/layout_view_all"
                    android:layout_toLeftOf="@+id/layout_view_all">

                    <ImageView
                        android:id="@+id/toolbar_tv_channel_Img"
                        android:layout_width="@dimen/margin_gap_42"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/margin_gap_2"
                        android:layout_marginBottom="@dimen/margin_gap_2"
                        android:scaleType="centerInside"
                        android:src="@drawable/toolbar_logo"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_gap_2"
                        android:layout_toEndOf="@+id/toolbar_tv_channel_Img"
                        android:layout_toRightOf="@+id/toolbar_tv_channel_Img"
                        android:orientation="horizontal">


                        <com.myplex.myplex.utils.FontRegularTypeface
                            android:id="@+id/clear_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:singleLine="true"
                            android:text="Clear History"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/textview_other_lang_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_gap_4"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance.FontHindi"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/textsize_14"
                            android:visibility="visible" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    android:layout_marginStart="@dimen/margin_gap_8"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <com.myplex.myplex.utils.FontRegularTypeface
                            android:id="@+id/textview_view_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/view_all"
                            android:textColor="@color/more_text_color"
                            android:textSize="@dimen/textsize_11"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/arrow_view_all"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_centerInParent="true"
                            android:layout_toEndOf="@+id/textview_view_all"
                            android:src="@drawable/arrow_right_white"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textview_view_all_other_lang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_gap_4"
                        android:text="@string/moreInHindi"
                        android:textAppearance="@style/TextAppearance.FontHindi"
                        android:textColor="@color/more_text_color"
                        android:textSize="@dimen/textsize_12"
                        android:visibility="gone" />


                </LinearLayout>
            </RelativeLayout>

            <com.myplex.myplex.utils.ViewPagerCustomDurationNew
                android:id="@+id/viewPagerCustomDurationNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_carousel_title"
                android:layout_marginTop="@dimen/title_image_gap"
                android:paddingLeft="@dimen/margin_gap_25"
                android:paddingRight="@dimen/margin_gap_25" />

            <viewpagerindicator.CircleIndicator
                android:id="@+id/view_pager_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/viewPagerCustomDurationNew"
                android:layout_alignParentBottom="true"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_15sdp"

                android:visibility="visible" />

            <com.myplex.myplex.ui.views.circleindicator.DotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:dotsColor="@color/subtitle_text_color"
                app:dotsCornerRadius="@dimen/_6sdp"
                app:dotsSize="@dimen/_6sdp"
                android:visibility="gone"
                app:dotsSpacing="@dimen/_1sdp"
                app:dotsStrokeColor="@color/subtitle_text_color"
                app:dotsWidthFactor="2.5"
                app:selectedDotColor="@color/colorPrimary" />


            <RelativeLayout
                android:id="@+id/grdient_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <View
                    android:id="@+id/left_gradient_view"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/left_gradient"
                    android:visibility="gone" />

                <View
                    android:id="@+id/right_gradient_view"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/right_gradient"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/viewpager_left_arrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/left_arrow"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/viewpager_right_arrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/right_arrow"
                    android:visibility="gone" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/offer_description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_item_bkg"
            android:visibility="gone">

            <TextView
                android:id="@+id/slider_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_6sdp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxEms="100"
                android:text=""
                android:textAppearance="@style/TextAppearance.FontRegular"
                android:textColor="@color/white_100"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>