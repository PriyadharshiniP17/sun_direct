        <androidx.cardview.widget.CardView
            android:id="@+id/cv_dp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/sundirect_banner_placeholder" />

        </androidx.cardview.widget.CardView>

        <com.myplex.myplex.utils.FontRegularTypeface
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_13"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/ib_expand_arrow"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/cv_dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.myplex.myplex.utils.FontRegularTypeface
            android:id="@+id/tv_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/sub_title"
            android:textSize="@dimen/textsize_11"
            app:layout_constraintEnd_toStartOf="@+id/ib_expand_arrow"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/cv_dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <ImageButton
            android:id="@+id/ib_expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/icon_up_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.myplex.myplex.utils.FontRegularTypeface
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:animateLayoutChanges="true"
            android:text="Your Sun Direct subscription ending soon. Don't forget to recharge"
            android:textColor="@color/descript"
            android:textSize="11sp"
            android:paddingBottom="@dimen/margin_10"
            app:layout_constraintEnd_toStartOf="@+id/ib_expand_arrow"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/cv_dp"
            android:layout_marginTop="@dimen/margin_20"
            app:layout_constraintTop_toBottomOf="@+id/tv_sub_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>