<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_168"
    android:orientation="vertical">

    <com.myplex.myplex.utils.FixedAspectRatioRelativeLayout
        android:id="@+id/fixed_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/big_weekly_item_width"
        app:aspectRatio="@fraction/big_weekly_trending_adapter_new">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_168"
           >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_168"
                app:cardCornerRadius="9dp"

                >
<!--                android:layout_margin="5dp"-->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/slider_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_168"
                    android:scaleType="fitXY"
                    android:src="@drawable/black" />

            <ImageView
                android:id="@+id/banner_play_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_play_icon"
                android:visibility="gone" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_partener_logo_right"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentTop="true"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize40Percent"

                />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/iv_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="@dimen/margin_44"
                android:layout_height="@dimen/margin_44"
                android:layout_marginBottom="@dimen/rent_margin_bottom"
                android:scaleType="fitCenter"
                android:src="@drawable/rent_badge" />
        </LinearLayout>
    </com.myplex.myplex.utils.FixedAspectRatioRelativeLayout>

    <com.myplex.myplex.ui.views.RoundedCornerImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/iv_free_logo_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/free_tag_banner"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/ad_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_155sdp"
        android:orientation="vertical"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/RRlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:padding="@dimen/_3sdp"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_12sp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textview_movies_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:singleLine="false"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp"
            android:visibility="invisible" />

        <RatingBar
            android:id="@+id/ratingbarbutton"
            style="@style/CustomRatingBarDetailWatchNow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_8sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.5"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RRlayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="1dp"
        android:ellipsize="end"
        android:paddingLeft="@dimen/_3sdp"
        android:textAppearance="@style/TextAppearance.FontLight"
        android:visibility="gone">

        <TextView
            android:id="@+id/textview_lanuage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textAppearance="@style/TextAppearance.FontLight"
            android:textColor="@color/live_tv_sub_text_color"
            android:textSize="@dimen/_6sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textview_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_toRightOf="@id/textview_lanuage"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textAppearance="@style/TextAppearance.FontLight"
            android:textColor="@color/live_tv_sub_text_color"
            android:textSize="@dimen/_6sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/textview_lanuage"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text=" "
            android:textAppearance="@style/TextAppearance.FontLight"
            android:textColor="@color/live_tv_sub_text_color"
            android:textSize="@dimen/_10sp"
            android:visibility="invisible" />

    </RelativeLayout>


</RelativeLayout>
