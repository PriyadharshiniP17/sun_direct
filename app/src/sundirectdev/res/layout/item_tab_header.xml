<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_10sp"
        android:background="@color/white_65"/>

    <com.myplex.myplex.utils.FontBoldTypeFace
        android:id="@+id/txt_tab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_10sp"
        android:textColor="@color/tab_bg_yellow"
        android:textSize="18sp" />

</LinearLayout>