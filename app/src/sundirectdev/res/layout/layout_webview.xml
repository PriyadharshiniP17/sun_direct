<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bkg">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/app_bkg"
        android:contentInsetLeft="10dp"
        android:contentInsetRight="10dp"
        android:contentInsetStart="10dp"
        app:contentInsetLeft="10dp"
        app:contentInsetRight="10dp"
        app:contentInsetStart="10dp"
        android:visibility="gone"
        >
    </androidx.appcompat.widget.Toolbar>
            <androidx.appcompat.widget.Toolbar
                android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/app_theme_color"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
          <ImageView
                    android:id="@+id/toolbar_settings_button"
                    android:layout_width="@dimen/margin_gap_48"
                    android:layout_height="@dimen/margin_gap_48"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/margin_gap_48"
                    android:padding="@dimen/margin_gap_12"
                    android:src="@drawable/actionbar_back_icon" />
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_gap_36"
                android:layout_gravity="center"
                android:src="@drawable/shreyaset_logo" />

    </androidx.appcompat.widget.Toolbar>
    <ProgressBar
        android:id="@+id/customactionbar_progressBar"
        style="@style/CustomProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/myplex_progress_bar_horizontal"
        android:layout_below="@+id/toolbar"/>

    <View
        android:id="@+id/red_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/customactionbar_progressBar"
        android:visibility="gone"
        android:background="@color/red_highlight_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/app_bkg"
        android:layout_below="@+id/red_view"
        android:layout_centerInParent="true"
        android:id="@+id/progress_layout"
        android:visibility="visible"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/red_view"
        >

    <WebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/app_bkg"
        android:layerType="software"
        android:visibility="visible"
        tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/textview_network_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/network_error"
        android:textColor="@color/progress_bar_loading_text_color"
        android:textSize="16sp"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/retry_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageview_error_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/reload_image" />

        <TextView
            android:id="@+id/textview_error_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview_error_retry"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/msg_tap_to_retry"
            android:textAppearance="@style/TextAppearance.FontRegular"
            android:textColor="@color/download_item_subtitle_text_color"
            android:textSize="@dimen/textsize_12"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>