<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/set_top_box_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/black"
    android:checkable="true"
    android:layout_marginTop="@dimen/margin_gap_40"
    app:strokeColor="@color/white_60"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="@dimen/_18sp"
    app:strokeWidth="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_gap_20"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/black">

        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="@dimen/_71sdp"
            android:layout_height="@dimen/_71sdp"
            android:scaleType="fitCenter"
            android:foregroundGravity="center_horizontal"
            android:background="@drawable/profile_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/logo_iv"
            android:layout_marginStart="@dimen/_25sp"
            android:orientation="vertical">

            <com.myplex.myplex.utils.FontBoldTypeFace
                android:id="@+id/set_top_box_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sun Direct -SD+"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_15" />

            <com.myplex.myplex.utils.FontBoldTypeFace
                android:id="@+id/set_top_box_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_gap_20"
                android:lineSpacingExtra="@dimen/_6sdp"
                android:text="description goes here"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_12" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>


