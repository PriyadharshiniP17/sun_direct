<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_color"
    android:orientation="vertical"
    android:padding="@dimen/margin_gap_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_video_playback_quality"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_2"
                android:paddingLeft="@dimen/margin_20"
                android:text="@string/video_quality"
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/text_video_playback_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:paddingLeft="@dimen/margin_20"
                android:text="@string/auto"
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radio_group_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_gap_48"
            android:layout_marginLeft="@dimen/margin_gap_48"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_20"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/radio_button_quality_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_app_setting_radio_button"
                android:padding="@dimen/dimen_15_dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

            <RadioButton
                android:id="@+id/radio_button_quality_hd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_app_setting_radio_button"
                android:padding="@dimen/dimen_15_dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

            <RadioButton
                android:id="@+id/radio_button_quality_sd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_app_setting_radio_button"
                android:padding="@dimen/dimen_15_dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

            <RadioButton
                android:id="@+id/radio_button_quality_low"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_app_setting_radio_button"
                android:padding="@dimen/dimen_15_dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />


        </RadioGroup>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_gap_10"
            android:background="@drawable/outline"
            android:paddingLeft="@dimen/margin_gap_20"
            android:paddingTop="@dimen/margin_gap_20"
            android:paddingRight="@dimen/margin_gap_20"
            android:paddingBottom="@dimen/margin_gap_20"
            android:id="@+id/fl_audio_quality">

            <com.myplex.myplex.utils.FontRegularTypeface
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_quality"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_13" />

            <Spinner
                android:id="@+id/spinnerQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:dropDownVerticalOffset="50dp"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:spinnerMode="dropdown"
                android:visibility="gone"
                app:backgroundTint="@color/white" />

            <LinearLayout
                android:id="@+id/video_quality_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <com.myplex.myplex.utils.FontRegularTypeface
                    android:id="@+id/selected_video_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto"
                    android:textAllCaps="false"
                    android:textColor="@color/white_30"
                    android:textSize="@dimen/textsize_11" />

                <ImageView
                    android:id="@+id/more_arrow"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="end|center_vertical"
                    android:animateLayoutChanges="true"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:src="@drawable/ic_down"
                    android:tag="Close"
                    app:tint="@color/white_30"
                    android:contentDescription="@string/app_name" />


            </LinearLayout>


        <RelativeLayout
            android:id="@+id/video_quality_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline"
            android:layout_marginTop="@dimen/margin_gap_40"
            android:visibility="gone"
            >

            <com.myplex.myplex.utils.FontRegularTypeface
                android:id="@+id/quality_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Quality"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14" />

            <com.myplex.myplex.utils.CustomGridView
                android:id="@+id/video_quality_grid_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                android:layout_below="@+id/quality_header"
                android:numColumns="2" />

        </RelativeLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/language_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_gap_20"
            android:background="@drawable/outline"
            android:padding="@dimen/margin_gap_20">

            <com.myplex.myplex.utils.FontRegularTypeface
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/language_setting"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_13" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <com.myplex.myplex.utils.FontRegularTypeface
                    android:id="@+id/selected_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto"
                    android:textAllCaps="false"
                    android:textColor="@color/white_30"
                    android:textSize="@dimen/textsize_11" />

                <ImageView
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_right_arrow"
                    app:tint="@color/white_30" />


            </LinearLayout>


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_gap_20"
            android:background="@drawable/outline"
            android:padding="@dimen/margin_gap_20">

            <com.myplex.myplex.utils.FontRegularTypeface
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/apps_as_home_page"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_13" />

            <CheckBox
                android:id="@+id/checkbox_channel_as_homepage__toggle"
                android:layout_width="@dimen/margin_gap_33"
                android:layout_height="@dimen/margin_gap_21"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/bg_app_setting_checkbox"
                android:button="@android:color/transparent" />

        </FrameLayout>



        <FrameLayout
            android:id="@+id/fl_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_gap_20"
            android:background="@drawable/outline"
            android:padding="@dimen/margin_gap_20">

            <com.myplex.myplex.utils.FontRegularTypeface
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/notification"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_13" />

            <CheckBox
                android:id="@+id/checkbox_notification_toggle"
                android:layout_width="@dimen/margin_gap_33"
                android:layout_height="@dimen/margin_gap_21"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/bg_app_setting_checkbox"
                android:button="@android:color/transparent" />

        </FrameLayout>
        <FrameLayout
            android:id="@+id/unregistered_smc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_gap_20"
            android:background="@drawable/outline"
            android:padding="@dimen/margin_gap_20">

            <com.myplex.myplex.utils.FontRegularTypeface
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Unregistered SMC"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_13" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_gap_20"
            android:background="@drawable/outline"
            android:padding="@dimen/margin_gap_20"
            android:visibility="gone">

            <com.myplex.myplex.utils.FontRegularTypeface
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/auto_play"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_13" />

            <CheckBox
                android:id="@+id/checkbox_auto_play_toggle"
                android:layout_width="@dimen/margin_gap_30"
                android:layout_height="@dimen/margin_gap_20"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/bg_app_setting_checkbox"
                android:button="@android:color/transparent" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:layout_marginRight="@dimen/dimen_15_dp"
            android:background="@color/divider_color"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/download_on_wifi"
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

            <CheckBox
                android:id="@+id/checkbox_download_on_wifi_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/bg_app_setting_checkbox"
                android:button="@android:color/transparent" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:layout_marginRight="@dimen/dimen_15_dp"
            android:background="@color/divider_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_download_location"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="@string/download_location"
            android:textAppearance="@style/TextAppearance.NormalFontRegular"
            android:textColor="@color/static_help_text"
            android:textSize="@dimen/textsize_14"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:layout_marginRight="@dimen/dimen_15_dp"
            android:background="@color/divider_color"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linear_parental_control"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_2"
                android:paddingLeft="@dimen/margin_20"
                android:text="@string/text_parental_text"
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/text_parental_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:paddingLeft="@dimen/margin_20"
                android:text="@string/parental_text_off"
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radio_group_parental_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_gap_48"
            android:layout_marginLeft="@dimen/margin_gap_48"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_20"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/radio_button_parental_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_app_setting_radio_button"
                android:padding="@dimen/dimen_15_dp"
                android:text="@string/parental_text_off"
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

            <RadioButton
                android:id="@+id/radio_button_parental_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_app_setting_radio_button"
                android:padding="@dimen/dimen_15_dp"
                android:text="@string/parental_text_all_content"
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

            <RadioButton
                android:id="@+id/radio_button_parental_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_app_setting_radio_button"
                android:padding="@dimen/dimen_15_dp"
                android:text="@string/parental_text_adult_content"
                android:textAppearance="@style/TextAppearance.NormalFontRegular"
                android:textColor="@color/static_help_text"
                android:textSize="@dimen/textsize_14" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:layout_marginRight="@dimen/dimen_15_dp"
            android:background="@color/divider_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_about"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="@string/about"
            android:textAppearance="@style/TextAppearance.NormalFontRegular"
            android:textColor="@color/static_help_text"
            android:textSize="@dimen/textsize_14"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/dimen_15_dp"
            android:layout_marginRight="@dimen/dimen_15_dp"
            android:background="@color/divider_color"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>