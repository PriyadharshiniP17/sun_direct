<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/black"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_50sdp">

        <LinearLayout
            android:id="@+id/back_nav_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/action_bar_height"
            android:foregroundGravity="center_horizontal"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_navigation"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:src="@drawable/back_arrow_icon"
                android:contentDescription="@string/app_name" />


            <com.myplex.myplex.utils.FontRegularTypeface
                android:id="@+id/signUptitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/validate_text"
                android:paddingEnd="@dimen/_45sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize_26" />
        </LinearLayout>


        <com.myplex.myplex.utils.FontRegularTypeface
            android:id="@+id/suggestion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/back_nav_icon"
            android:layout_marginTop="@dimen/_35sdp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:maxLines="2"
            android:text="@string/register_dot"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14" />


        <com.myplex.myplex.utils.FontRegularTypeface
            android:id="@+id/mobile_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/suggestion_text"
            android:layout_marginTop="@dimen/_56sdp"
            android:gravity="start"
            android:text="@string/register_mobile_numb"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_13"
            android:visibility="visible" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_mobile_number"
            style="@style/SignInEditTextChanges"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/mobile_number_text"
            android:layout_marginTop="@dimen/_5sp"
            android:background="@drawable/rounded_corner_button_1"
            android:hint="@string/register_numb"
            android:inputType="number"
            android:paddingStart="@dimen/_18sdp"
            android:textColor="@color/new_user_edittext_color"
            android:textColorHint="@color/white_20"
            android:textSize="@dimen/textsize_13"
            android:visibility="visible" />


        <com.myplex.myplex.utils.FontRegularTypeface
            android:id="@+id/otp_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mobile_number"
            android:layout_marginTop="@dimen/_22sdp"
            android:gravity="start"
            android:text="@string/enter_otp_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_13"
            android:visibility="visible" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_otp"
            style="@style/SignInEditTextChanges"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/otp_title_text"
            android:layout_marginTop="@dimen/_5sp"
            android:background="@drawable/rounded_corner_1"
            android:hint="@string/enter_otp_title"
            android:inputType="number"
            android:paddingStart="@dimen/_18sdp"
            android:textColor="@color/new_user_edittext_color"
            android:textColorHint="@color/new_user_edittext_color"
            android:textSize="@dimen/textsize_13"
            android:visibility="visible" />


        <com.myplex.myplex.utils.FontBoldTypeFace
            android:id="@+id/btn_resend_otp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/et_otp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_25sp"
            android:background="@drawable/resend_otp_background"
            android:gravity="center"
            android:text="@string/resend_otp_validate"
            android:textColor="@color/white_50"
            android:textSize="@dimen/textsize_18"
            android:visibility="visible" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_buttons_height"
            android:layout_below="@+id/btn_resend_otp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/rounded_corner_button_white"
            android:fontFamily="@font/amazon_ember_cd_bold"
            android:text="@string/get_otp"
            android:textAllCaps="false"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/textsize_16"
            android:textStyle="bold" />

        <com.myplex.myplex.utils.FontRegularTypeface
            android:id="@+id/tv_note_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_register"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="start"
            android:text="@string/note_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_13"
            android:visibility="visible" />


    </RelativeLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>