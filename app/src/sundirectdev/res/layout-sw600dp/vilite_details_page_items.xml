<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:elevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#111114"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/_15sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_110sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivImage"
                    android:layout_width="@dimen/_326sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/playpause"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:foregroundGravity="center"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/player_play_button" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_10sdp">

                        <com.myplex.myplex.utils.FontBoldTypeFace
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sp" />

                        <com.myplex.myplex.utils.FontRegularTypeface
                            android:id="@+id/tvSubTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:maxLines="1"
                            android:textAppearance="@style/TextAppearance.FontRegular"
                            android:textColor="@color/white_70"
                            android:textSize="@dimen/_11sp" />

                        <com.myplex.myplex.utils.FontRegularTypeface
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:maxLines="1"
                            android:text="10:00 - 11:00 AM"
                            android:textAppearance="@style/TextAppearance.FontRegular"
                            android:textColor="@color/white_50"
                            android:textSize="@dimen/_10sp" />

                        <com.myplex.myplex.utils.FontRegularTypeface
                            android:id="@+id/tvDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:lineSpacingExtra="@dimen/_5sp"
                            android:layout_gravity="center"
                            android:textColor="@color/white_70"
                            android:textSize="@dimen/_10sp" />
                        <com.myplex.myplex.utils.FontRegularTypeface
                            android:id="@+id/cast_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:text="Cast:"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white_70"
                            android:textSize="@dimen/_10sp"
                            android:visibility="visible"
                            />
                        <com.myplex.myplex.utils.FontRegularTypeface
                            android:id="@+id/tvCast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:lineSpacingExtra="@dimen/_5sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white_70"
                            android:textSize="@dimen/_10sp"
                            android:visibility="visible"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/playLL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_gap_20"
                            android:layout_marginRight="@dimen/margin_gap_20"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/btPlayNow"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/icon_play_portrait" />

                            <com.myplex.myplex.utils.FontRegularTypeface
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:paddingBottom="@dimen/_5sp"
                                android:text="@string/play"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize_11"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/likeLL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_gap_20"
                            android:layout_marginRight="@dimen/margin_gap_20"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ivLike"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/ic_unlike" />

                            <com.myplex.myplex.utils.FontRegularTypeface
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:text="@string/like_text"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/reminderLL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/margin_gap_20"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/margin_gap_20"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/reminder_image"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/ic_notification" />

                            <com.myplex.myplex.utils.FontRegularTypeface
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:paddingBottom="@dimen/_10sp"
                                android:text="@string/reminder"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize_11"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_gap_20"
                            android:layout_marginRight="@dimen/margin_gap_20"
                            android:orientation="vertical"
                            android:visibility="gone"
                            >

                            <ImageView
                                android:id="@+id/ivShare"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:src="@drawable/ic_share" />

                            <com.myplex.myplex.utils.FontRegularTypeface
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:gravity="center"
                                android:text="@string/share"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
